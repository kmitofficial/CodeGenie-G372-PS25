{
  "name": "codegenie",
  "displayName": "CodeGenie",
  "description": "AI-powered code completion and generation",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codegenie.processAIComment",
        "title": "CodeGenie: Process AI Comment"
      },
      {
        "command": "codegenie.acceptInlineCompletion",
        "title": "CodeGenie: Accept Inline Completion"
      },
      {
        "command": "codegenie.convertCode",
        "title": "CodeGenie: Convert Code"
      }
    ],
    "keybindings": [
      {
        "command": "codegenie.processAIComment",
        "key": "ctrl+alt+g",
        "when": "editorTextFocus"
      },
      {
        "command": "codegenie.acceptInlineCompletion",
        "key": "ctrl+alt+c",
        "when": "editorTextFocus && inlineSuggestionVisible"
      },
      {
        "command": "codegenie.convertCode",
        "key": "ctrl+alt+t",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build-webview": "cd webview && npm run build"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/react-syntax-highlighter": "^15.5.11",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.8",
    "autoprefixer": "^10.4.14",
    "css-loader": "^6.8.1",
    "eslint": "^8.44.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "postcss": "^8.4.27",
    "postcss-loader": "^7.3.3",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.3",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.5.0"
  }
}